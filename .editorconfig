# 最顶层的 EditorConfig 文件
root = true

# 针对所有文件
[*]
# 用两个空格代替制表符
indent_style = space
indent_size = 2

# 设置文件编码utf-8
charset = utf-8

# Unix风格的换行符
end_of_line = lf

# 在保存时删除尾部的空白字符
trim_trailing_whitespace = true

# 在文件结尾添加一个空白行
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
